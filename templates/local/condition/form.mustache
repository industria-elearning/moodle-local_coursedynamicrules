{{!
    @template local_coursedynamicrules/local/condition/form

    Template identical in structure to core_reportbuilder/local/audience/form.mustache,
    used for condition cards.
}}
<div data-region="local_coursedynamicrules/condition-card" class="instance-card" data-condition-id="{{instanceid}}" data-condition-title="{{heading}}"
    {{#editwarning}}
        data-condition-edit-warning="1"
    {{/editwarning}}
>
    {{#showormessage}}
        <span class="condition-separator d-flex mb-3 justify-content-center align-items-center small text-muted font-weight-bold">
            {{#str}} or, core_reportbuilder {{/str}}
        </span>
    {{/showormessage}}
    <div class="mb-3 card">
        <div class="card-header p-0">
            <div class="mb-0 d-flex">
                <h3 class="h6 text-start m-0 align-self-center ps-3" data-region="local_coursedynamicrules/condition-heading">
                    {{{headingeditable}}}
                </h3>
                <span class="ms-auto">
                    {{#canedit}}
                        <button class="btn btn-link px-0"
                                data-action="local_coursedynamicrules/edit-condition"
                                title="{{#str}} editcondition, local_coursedynamicrules, {{heading}} {{/str}}"
                                aria-label="{{#str}} editcondition, local_coursedynamicrules, {{heading}} {{/str}}"
                                {{^description}}disabled{{/description}}>
                            {{#pix}} i/settings, core {{/pix}}
                        </button>
                    {{/canedit}}
                    {{#candelete}}
                        <button class="btn btn-link px-0 me-2"
                                data-action="local_coursedynamicrules/delete-condition"
                                title="{{#str}} deletecondition, local_coursedynamicrules, {{heading}} {{/str}}"
                                aria-label="{{#str}} deletecondition, local_coursedynamicrules, {{heading}} {{/str}}"
                                {{^description}}disabled{{/description}}>
                            {{#pix}} i/trash, core {{/pix}}
                        </button>
                    {{/candelete}}
                </span>
            </div>
        </div>
        <div class="card-body p-3" data-region="local_coursedynamicrules/condition-form">
            {{#editwarning}}<div class="alert alert-warning p-2">{{.}}</div>{{/editwarning}}
            <div data-region="local_coursedynamicrules/condition-description" {{^description}}class="hidden"{{/description}}>
                {{{description}}}
            </div>
            <div data-region="local_coursedynamicrules/condition-form-container" {{^form}}class="hidden"{{/form}}>
                <div class="alert alert-warning p-2" data-region="condition-not-saved">{{#str}} conditionnotsaved, local_coursedynamicrules {{/str}}</div>
                {{{form}}}
            </div>
        </div>
    </div>
</div>
